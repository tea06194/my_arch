{
    "layer": "top",
    "modules-left": ["hyprland/workspaces", "tray"],
    "modules-center": ["custom/startup", "cpu", "memory", "custom/gpu"],
    "modules-right": [
		"network",
		"hyprland/window",
		"pulseaudio",
		// "backlight",
		"hyprland/language",
		"clock"
		// "custom/power",
		// "custom/theme_toggle"
	],
	"hyprland/language": {
		"format": "{}",
		"format-en": "US",
		"format-ru": "RU"
	},
	"hyprland/window": {
		"format": "{}",
		"rewrite": {
			"(.*)": ""
		},
		"icon" : true
	},
	"clock": {
		"tooltip-format": "{:%d-%m-%Y}"
	},
	"cpu": {
		"interval": 10,
		"format": "cpu {}%",
		"max-length": 10
	},
	"custom/gpu": {
		"format": "{}",
		"exec": "~/.config/waybar/gp.sh",
		"interval": 10,
		"tooltip": false
	},
	"custom/startup": {
		"format": " ",
		"exec": "~/.config/waybar/startup_time.sh",
		"tooltip": false,
		"return-type": "json"
	},
	// "custom/theme_toggle": {
	// 	"format": "üåì",
	// 	"tooltip": "–ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å —Ç–µ–º—É",
	// 	"on-click": "~/.config/waybar/toggle-theme.sh"
	// },
	"memory": {
		"interval": 30,
		"format": "ram {used}GB",
		"max-length": 10
	},
	"network": {
		"format": "{ifname}",
		"format-wifi": "{wifi} ({signalStrength}%) ",
		"format-ethernet": "D {bandwidthDownBytes} U {bandwidthUpBytes}",
		"format-disconnected": "x", //An empty format will hide the module.
		"interval": 2,
		"tooltip-format": "{ifname}",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) ",
		"tooltip-format-ethernet": "{ifname} ",
		"tooltip-format-disconnected": "Disconnected",
		"max-length": 50
	},
	"pulseaudio": {
		"format": "{volume}% {icon} {format_source}",
		"format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
		"format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
		"format-muted": "{volume}% Óª®  {format_source}",
		"format-source": "{volume}% ÔÑ∞",
		"format-source-muted": "ÔÑ±",
		"format-icons": {
			"headphone": "ÔÄ•",
			"hands-free": "Ôñê",
			"headset": "Ôñê",
			"phone": "ÔÇï",
			"portable": "ÔÇï",
			"car": "ÔÜπ",
			"default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
		},
		"on-click": "pavucontrol"
	},
	"tray": {
		"icon-size": 21,
		"spacing": 10
	}
}
